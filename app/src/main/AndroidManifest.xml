<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.anmoraque.eldesaviodominguerojerez">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ElDesavioDomingueroJerez"
        tools:targetApi="31">

        <activity
            android:name=".PantallaNegociosActivity"
            android:label="Negocios del Distrito"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboard"
            android:exported="false" />
        <activity
            android:name=".PantallaAyudaActivity"
            android:label="Ayuda sobre la App"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboard"
            android:exported="false" />
        <activity
            android:name=".PantallaCreditosActivity"
            android:label="Creditos"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboard"
            android:exported="false" />
        <activity
            android:name=".PantallaDistritosActivity"
            android:label="Distritos de Jerez de la Frontera"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboard"
            android:exported="false" />
        <activity
            android:name=".PantallaMapaUbicacionActivity"
            android:label="Mapa de Jerez de la Frontera"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboard"
            android:exported="false" />
        <activity
            android:name=".AdjuntarNuevoNegocioUsuarioActivity"
            android:exported="false"
            android:label="Adjuntar nuevo negocio"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboard"/>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboard"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>