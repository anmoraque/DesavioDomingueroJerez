<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos de red y ubicación -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Permiso opcional para mapas con ubicación precisa -->
    <uses-feature android:name="android.hardware.location.gps" android:required="false" />

    <!-- Declarar visibilidad si se abre contenido en otras apps (Android 11+) -->
    <queries>
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="geo" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ElDesavioDomingueroJerez"
        tools:targetApi="34">

        <!-- Clave API de Google Maps gestionada con manifestPlaceholders -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <!-- Actividad principal (Launcher) -->
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize|keyboard"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Otras actividades de la app -->
        <activity
            android:name=".MapsActivity"
            android:exported="false"
            android:label="@string/title_activity_maps" />

        <activity
            android:name=".PantallaNegociosActivity"
            android:configChanges="orientation|screenSize|keyboard"
            android:exported="false"
            android:label="@string/title_select_business"
            android:screenOrientation="portrait" />

        <activity
            android:name=".PantallaAyudaActivity"
            android:configChanges="orientation|screenSize|keyboard"
            android:exported="false"
            android:label="@string/toolbar_title_help"
            android:screenOrientation="portrait" />

        <activity
            android:name=".PantallaCreditosActivity"
            android:configChanges="orientation|screenSize|keyboard"
            android:exported="false"
            android:label="@string/toolbar_title_credits"
            android:screenOrientation="portrait" />

        <activity
            android:name=".PantallaDistritosActivity"
            android:configChanges="orientation|screenSize|keyboard"
            android:exported="false"
            android:label="@string/toolbar_title_districts"
            android:screenOrientation="portrait" />

        <activity
            android:name=".AdjuntarNuevoNegocioUsuarioActivity"
            android:configChanges="orientation|screenSize|keyboard"
            android:exported="false"
            android:label="@string/toolbar_title_add_business"
            android:screenOrientation="portrait" />

    </application>

</manifest>